<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="500.0"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="w05.jokey.v0502.gui.JokeyGUIMainController">
	<bottom>
		<ButtonBar id="ButtonBar" BorderPane.alignment="CENTER"
			style="-fx-background-color: #e8e2e0;">
			<buttons>
				<Button mnemonicParsing="false"
					onAction="#onResetJokesSeenAction" text="Resett" />
				<Button mnemonicParsing="false"
					onAction="#onRandomJokeAction" text="En tilfeldig vits" />
			</buttons>
			<padding>
				<Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
			</padding>
		</ButtonBar>
	</bottom>
	<center>
		<BorderPane prefHeight="200.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<center>
				<Label fx:id="jokeLabel" text="[vits]" textAlignment="CENTER"
					textFill="#ff6501" wrapText="true" BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</center>
			<bottom>
				<Label fx:id="jokeStatsLabel" text="[Vits a av b]"
					textAlignment="CENTER" BorderPane.alignment="CENTER">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
			</bottom>
		</BorderPane>
	</center>
</BorderPane>
